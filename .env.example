# Blogger Analytics SaaS - Environment Variables
# Copy this file to .env and fill in the values

# Database
DB_PASSWORD=secure_password_change_me
DATABASE_URL=postgresql://blogger_user:${DB_PASSWORD}@localhost:5432/blogger_analytics

# Redis
REDIS_URL=redis://localhost:6379/0

# Application
SECRET_KEY=change_this_to_a_random_string_at_least_32_chars
REQUIRE_AUTH=true
FLASK_ENV=development
# FLASK_ENV=production

# JWT
JWT_SECRET_KEY=${SECRET_KEY}
JWT_ACCESS_TOKEN_EXPIRES=900  # 15 minutes in seconds
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days in seconds

# Rate Limiting
RATE_LIMIT_DEFAULT=100/hour

# Google Sheets (optional)
GOOGLE_CREDENTIALS_FILE=credentials.json
SPREADSHEET_NAME=Blogger Stats

# Parser
MAX_VIDEOS_PER_PLATFORM=1000  # max videos per platform per blogger

# Instagram Auth (for proper view counts)
INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=

# Logging
LOG_LEVEL=INFO
